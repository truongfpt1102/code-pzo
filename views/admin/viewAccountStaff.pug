extends ../layouts/adminMenu
block content
    #accordion.mt-5
        .card
                h5.mb-0
                    p(data-toggle='collapse' data-target='#collapseOne' aria-expanded='true' aria-controls='collapseOne')
                        | Staff Account
            
                    table.table.mt-1 
                            tr 
                                th Name
                                th 
                            each account in accountStaff 
                                tr
                                    td= account.name
                                    td 
                                        a.btn(href='/admin/updateAccountStaff/'+ account.username) Update 
                                        a.btn(href='/admin/deleteAccountStaff/'+ account.username) Delete                                 
                    a.btn(href = '/admin/createAccountStaff') Create account for Staff